@model Ampbi.DataAccess.ViewModel.DashBoard
@using System.Web.UI.WebControls


<div class="col-md-9" id="PerfCardDefault">
    @if (Model.agentMyMetric != null)
    {
        foreach (var perfDetails in Model.agentMyMetric)
        {
            <div class="col-md-3 padlr5">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr class="green-tdtd">
                                <td width="96%" align="left">@perfDetails.KpiMetricName</td>
                                <td width="4%" align="right">
                                    <a href="#" data-toggle="modal" data-target="#my-metric"><i class="glyphicon glyphicon-modal-window" aria-hidden="true"></i></a></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="green-tdtd1">
                                <td align="left" scope="row">Goal</td>
                                <td align="right">@perfDetails.Goal</td>
                            </tr>
                            <tr class="green-tdtd">
                                <td align="left" scope="row">Achieved</td>
                                <td align="right">@perfDetails.Achieved</td>
                            </tr>
                            <tr class="green-tdtd1">
                                <td align="left" scope="row">Coachings</td>
                                <td align="right">@perfDetails.Coachings</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>

