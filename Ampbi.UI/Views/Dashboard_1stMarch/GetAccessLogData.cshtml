@using PagedList.Mvc;
@using PagedList;
@model Ampbi.DataAccess.ViewModel.DashBoard
@using System.Web.UI.WebControls;


@{
    ViewBag.Title = "AccessLog";
    Layout = "~/Views/Shared/_LayoutMain1.cshtml";
}


<!-- START CONTENT -->
<section id="main-content" class="sidebar_shift sidebar_shift-reg">
    <section class="wrapper wrap-box-user">

        <div class="clearfixf marb20">
            <div class="col-md-12 col-sm-12 col-xs-12 pan0 mart30">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <header class="panel_header box-heading">
                            <h2 class="title pull-left">Access Log</h2>
                        </header>
                        <form class="form-horizontal">
                            <div class="content-body border-box">
                                <table class="table table-bordered">
                                    <tr>
                                        <th align="center" valign="middle">Name</th>
                                        <th align="center" valign="middle">Module</th>
                                        <th align="center" valign="middle">Access Date &amp; Time</th>
                                    </tr>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.lstAlllogdata)
                                        {
                                        <tr>
                                            <td align="left" valign="middle">@item.EmployeeName</td>
                                            <td align="left" valign="middle">@item.Module</td>
                                            <td align="left" valign="middle">@item.AccessedDateTime</td>
                                        </tr>
                                             
                                        }
                                      
                                        
                                    }
                                    else
                                    {
                                        <tr>
                                        <td>No record found</td>   
                                        </tr>
                               
                                    }
                                </table>
                                         @if(Model !=null)
                                         { 
                                          <div>
                                            <li>
                                           @Html.PagedListPager(Model.lstAlllogdata,no => Url.Action("GetAccessLogData", new {no, @class = "pagination" }))
                                         </li>
                                                </div>
                                         }
                            </div>
                            <div class="col-md-12 col-sm-12 page-footer-box clearfix">
                                <div class="pull-right col-md-offset-4">
                                    <button class="btn btn-success input-sm" type="submit">Cancel</button>
                                    <button class="btn btn-success input-sm" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </section>
</section>
<!-- END CONTENT -->


